{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Build With GCC",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "-std=c++20",
        "${workspaceFolder}/*.cpp",
        "-o",
        "${fileDirname}/rooster"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "compiler: /usr/bin/g++"
    },
